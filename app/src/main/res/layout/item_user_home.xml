<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:layout_height="280dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/gradien"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="#fff"
                    android:layout_marginTop="16dp"
                    android:id="@+id/user_home_item_name"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/user_home_item_adress"
                    android:fontFamily="monospace"
                    android:textColor="#fefefe"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginTop="6dp"
                    android:background="@drawable/gradien"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="15dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                    <ImageView
                        android:id="@+id/user_home_item_img"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <RelativeLayout
                        android:layout_margin="6dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/checkbox_selected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/user_home_item_distance"
                            android:padding="6dp"
                            android:fontFamily="monospace"
                            android:textColor="#fff"
                            android:text="20 KM"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>
</FrameLayout>