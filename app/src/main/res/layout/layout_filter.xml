<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_gravity="center"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:id="@+id/layout_select_provinsi"
           android:padding="6dp"
           android:background="@drawable/background_white"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/filter_prov"
               android:textSize="16sp"
               android:text="Pilih"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <TextView
               android:padding="8dp"
               android:gravity="center"
               android:textStyle="bold"
               android:textColor="#fff"
               android:textSize="20sp"
               android:background="@drawable/gradien"
               android:text="Provinsi"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_select_kabupaten"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/filter_kab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gradien"
                android:gravity="center"
                android:padding="8dp"
                android:text="Kabupaten"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_select_kecamatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_white"
            android:orientation="horizontal"
            android:padding="6dp">

            <TextView
                android:id="@+id/filter_kec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gradien"
                android:gravity="center"
                android:padding="8dp"
                android:text="Kecamatan"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradien"
            android:gravity="center"
            android:padding="8dp"
            android:text="Cari Masjid"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>