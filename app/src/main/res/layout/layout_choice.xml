<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="16dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_as_user"
                android:layout_weight="1"
                android:layout_margin="16dp"
                android:src="@mipmap/user_deselect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:fontFamily="monospace"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Jamaah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_as_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:src="@mipmap/user_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Pengurus"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/signup_choice_btn_next"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="NEXT"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradien"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</RelativeLayout>